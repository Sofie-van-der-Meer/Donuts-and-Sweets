<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Donuts</title>
    <style>
        img {
            max-height: 300px;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <%- include('./components/_header') %>
        </header>
        <main>
            <h1 class="mb-4">homepage</h1>
            <a href="/products/new" class="btn btn-success">New product</a>
            <ul>
            <% categories.forEach(category => { %>
                <li><%= category.name %></li>

            <% }) %>                
            </ul>

            <ul>
                <% categories.forEach(category => { %>
                    <li><%= category.name %></li>

                    <% products.forEach(product => { 
                        if (product.categoryId == category.categoryId) { %>
                        <section class="card my-3 vh-35">
                            <img src="<%= product.imageUrl %>" alt="" class="card-img object-fit-cover">
                            <section class="card-img-overlay text-light m-3 d-flex flex-column justify-content-end">
                                <h5 class="card-title"><%= product.name %></h5>
                                <span class="card-text"><%= product.description %></span>
                            </section>
                        </section>
                    <% } }) %>
    
                <% }) %>                
            </ul>
        </main>
        <footer>
            <%- include('./components/_footer') %>
        </footer>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>