<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
    <script src="https://kit.fontawesome.com/6d66c3d9c5.js" crossorigin="anonymous"></script>
    <title>Donuts</title>
</head>
<body data-bs-theme="dark" class="cartPage">
    <div class="container fixed-container mx-auto">
        <header class="pt-3 pb-1 sticky-top bg-body">

            <section class="d-flex w-100 justify-content-between">
                <hgroup class="my-auto">
                    <h1>SWEET DONUT</h1>
                    <h5>ORDER NOW</h5>
                </hgroup>
            </section>
            <aside>
                <a href="/" class="btn border border-warning bg-warning-subtle m-4" style="--bs-border-opacity: .5; z-index: 100;"><i class="fa-solid fa-angle-left fa-lg"></i></a>
            </aside>

        </header>
        <main class="pb-180">
            <% if (products.length > 0) { %>
                there is one or more products in the cart
                <% products.forEach(({product, quantity}) => { if (quantity) { %>
                    <div class="card my-3 d-flex flex-row vh-15 border border-warning">
                        <!-- <div class="row g-0"> -->
                            <div class="col-4">
                                <img src="<%= product.imageUrl %>" class="img-fluid rounded-start" alt="...">
                            </div>
                            <div class="col-8 d-flex flex-nowrap bg-warning-subtle rounded-end">
                                <div class="card-body">
                                    <h5 class="card-title"><%= product.name %></h5>
                                    <p class="card-text"><%= product.description %></p>
                                    <p class="card-text text-end">
                                        <small class="text-body-secondary">&euro; <%= product.price %>/piece - </small>
                                        <strong class="text-body-secondary">&euro; <%= product.price * quantity %></strong>
                                    </p>
                                </div>
                                <section class="col-2 col-md-1 m-2 m-md-3 p-3 bg-warning bg-opacity-50 badge
                                        d-flex flex-column align-items-center justify-content-center">
                                    <a href="cart/<%= product.productId %>/add" class="m-0 badge bg-warning-subtle rounded-circle p-1" 
                                    style="--bs-badge-font-size: 1rem; aspect-ratio: 1;"><i class="fa-solid fa-plus fa-xs"></i></a>
                                    <% if (quantity) { %>
                                        <h5 class="my-2 bg-warning rounded-circle text-black" style=" aspect-ratio: 1;"><%= quantity %></h5>
                                        
                                        <a href="cart/<%= product.productId %>/reduce" class="m-0 badge bg-warning-subtle rounded-circle p-1" 
                                        style="--bs-badge-font-size: 1rem; aspect-ratio: 1;"><i class="fa-solid fa-minus fa-xs"></i></a>
                                    <% } %>
                
                                </section>                                
                            </div>
                    </div>
                    <% } }) %>  
                <% }  %>  
        </main>
        <%- include('../components/_footer') %>

    </div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>