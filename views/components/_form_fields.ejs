
<div class="form-group">
    <label for="name">Productname</label>
    <input required value="<%= product.name %>" type="text" name="name" id="name" class="form-control">
</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea required type="text" name="description" id="description" class="form-control"><%= product.description %></textarea>
</div>
<div class="form-group">
    <label for="price">Price</label>
    <input required value="<%= product.price %>" type="number" name="price" id="price" class="form-control" step="0.01" min="0">
</div>

<div class="form-group">
    <label for="stock">Stock</label>
    <input required value="<%= product.stock %>" type="number" name="stock" id="stock" class="form-control" min="0">
</div>

<div class="form-group">
    <label for="categoryId">Select a catagory</label>
    <select name="categoryId" id="categoryId">
        <option value="">-- choose an category --</option>
        <% categories.forEach(category => { %>
            <% if (product.categoryId == category.categoryId) { %>
                <option value="<%= category.categoryId %>" selected><%= category.categoryId %> - <%= category.name %></option>
            <% }  else { %>
                <option value="<%= category.categoryId %>"><%= category.categoryId %> - <%= category.name %></option>
            <% } %>
        <% }) %>
    </select>
</div>

<div class="form-group">
    
    <% if (product.imageUrl) { %>
        <img src="<%= product.imageUrl %>" alt="" id="imagePreview" class="w-50 m-2">
    <% }  else { %>
        <label for="imageUrl">Import an image</label>
        <input required type="file" name="imageUrl" id="imageUrl" class="form-control" accept="image/png, image/jpg">
    <% } %>
</div>


<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>